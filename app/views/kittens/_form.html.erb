<%=form_for(@kitten) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %></br>
  <%= f.label :age %>
  <%= f.text_field :age, class: 'form-control' %></br>
  <%= f.label :cuteness %>
  <%= f.text_field :cuteness, class: 'form-control' %></br>
  <%= f.label :softness %>
  <%= f.text_field :softness, class: 'form-control' %></br>
  <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
<% end %>